<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand">
              <i class="fa-solid fa-cake-candles"></i> ロゴ
          </a>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
              <li class="nav-item">
                <%= link_to "マイページ", customers_mypage_path, class: 'btn nav-link text-black' %>
              </li>
              <li class="nav-item">
                <%= link_to "商品一覧", items_path, class: 'btn nav-link text-black' %>
              </li>
              <li class="nav-item">
                <%= link_to "カート", cart_items_path, class: 'btn nav-link text-black' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'btn nav-link text-black' %>
              </li>

              <% else %>

              <li class="nav-item">
                <%= link_to "About", about_path, class: 'btn nav-link text-black' %>
              </li>
              <li class="nav-item">
                <%= link_to "商品一覧", items_path, class: 'btn nav-link text-black' %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_customer_session_path, class: 'btn nav-link text-black' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", customer_session_path, class: 'btn nav-link text-black' %>
              </li>
              <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
