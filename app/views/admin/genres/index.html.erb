<h2>ジャンル一覧・追加</h2><br>
  <label>ジャンル名</label>
  <%= form_with model: @newgenre, url: admin_genres_path do |f| %>
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  <% end %>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td>
        <%= genre.name %>
      </td>
      <td>
        <%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
