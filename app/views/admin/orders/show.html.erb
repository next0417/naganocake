<h2>注文履歴詳細</h2>
<table>
  <tr>
    <th>購入者</th>
    <td><%= @order.name %></td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      〒<%= @order.postal_code %>
      <%= @order.address %><br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <td>
      <%= form_with model: @order, url: admin_order_path do |f| %>
      <%= f.select :status, [['入金待ち',0], ['入金確認',1], ['製作中',2], ['発送準備中',3], ['発送済み',4]] %>
      <%= f.submit "更新", class: "btn btn-success" %>
      <% end %>
    </td>
  </tr>
</table>

<table class="table table-hover table-inverse">
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
  </tr>
  <% @order.ordering_products.each do |product| %>
  <tr>
    <td><%= product.item.name %></td>
    <td><%= product.item.with_tax_price %></td>
    <td><%= product.amount %></td>
    <td><%= product.item.with_tax_price * product.amount %></td>
    <%= form_with model: product, url: admin_ordering_product_path do |m| %>
    <td>
      <%= m.select :making_status, [['製作不可',0], ['製作待ち',1], ['製作中',2], ['製作完了',3]] %>
      <%= m.submit "更新", class: "btn btn-success" %>
    </td>
    <% end %>
  </tr>
  <% end %>
</table>
<table>
  <tr>
    <th>商品合計</th>
    <td><%= @order.total_payment - @order.shopping_cost %>円</td>
  </tr>
  <tr>
    <th>送料</th>
    <td><%= @order.shopping_cost %>円</td>
  </tr>
  <tr>
    <th>請求金額合計</th>
    <td><%= @order.total_payment %>円</td>
  </tr>
</table>