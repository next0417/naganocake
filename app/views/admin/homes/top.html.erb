
<h2>注文履歴一覧</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |f| %>
    <tr>
      <td>
        <%= link_to admin_order_path(f.id) do %>
        <%= f.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
        <% end %>
      </td>
      <td><%= f.name %></td>
      <% @sum = 0 %>
      <td>
      <% f.ordering_products.each do |product| %>

        <% @sum += product.amount %>
      <% end %>
        <%= @sum %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>