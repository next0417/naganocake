<h2>注文履歴詳細</h2>
<h4>注文情報</h4>
<table border="2">
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>
      〒<%= @order.postal_code %><br>
      <%= @order.address %><br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
    <td>ステータス</td>
    <td><%= @order.status_i18n %></td>
  </tr>
</table>

<h4>請求情報</h4>
<table border="2">
  <tr>
    <th>商品合計</th>
    <td><%= @order.total_payment - @order.shopping_cost %></td>
  </tr>
  <tr>
    <th>配送料</th>
    <td><%= @order.shopping_cost %></td>
  </tr>
  <tr>
    <th><strong>ご請求額</strong></th>
    <td><%= @order.total_payment %></td>
  </tr>
</table>

<h4>注文内容</h4>
<table border="2">
  <tr>
    <th>商品</th>
    <th>単価(税込)</th>
    <th>個数</th>
    <th>小計</th>
  </tr>
  <tr>
    <% @order.ordering_products.each do |product| %>
    <td><%= product.item.name %></td>
    <td><%= product.item.with_tax_price %></td>
    <td><%= product.amount %></td>
    <td>
      <%= product.item.with_tax_price * product.amount %>
    </td>
    <% end %>
  </tr>

</table>